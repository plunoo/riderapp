# ===========================================
# RIDER MANAGEMENT SYSTEM - ENVIRONMENT TEMPLATE
# ===========================================
# Copy this file to .env and update the values

# Domain Configuration
DOMAIN=riderapp.johnsonzoglo.com
VITE_API_BASE_URL=https://riderapp.johnsonzoglo.com/api

# Database Configuration
POSTGRES_DB=riderdb
POSTGRES_USER=rider
POSTGRES_PASSWORD=your_secure_database_password

# JWT Security (Generate a strong secret key)
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Admin Seeding (set to false after initial setup)
AUTO_SEED_ADMIN=true
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_admin_password
ADMIN_NAME=System Admin
PRIME_ADMIN_USERNAME=primeadmin
PRIME_ADMIN_PASSWORD=your_prime_admin_password
PRIME_ADMIN_NAME=Prime Admin

# Production Security Checklist:
# ✓ Change all default passwords
# ✓ Generate a strong JWT_SECRET (use: openssl rand -hex 32)
# ✓ Use a strong database password
# ✓ Update DOMAIN to your actual domain
# ✓ Set AUTO_SEED_ADMIN=false after first deployment